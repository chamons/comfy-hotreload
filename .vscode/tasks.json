{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "cargo check",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build"
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "cargo nextest run",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}